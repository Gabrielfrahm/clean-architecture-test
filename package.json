{
  "name": "clean-architecture",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "jest --passWithNoTests --silent --noStackTrace --runInBand --watch -c jest-unit-config.ts",
    "test:integration": "jest --passWithNoTests --silent --noStackTrace --runInBand --watch -c jest-integration-config.ts",
    "test:staged": "jest --passWithNoTests --silent --noStackTrace --runInBand --findRelatedTests",
    "test:ci": "jest --passWithNoTests --silent --noStackTrace --runInBand --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "eslint": "^7.12.1",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4"
  }
}